---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import FullViewportLayout from '../layouts/FullViewportLayout.astro';
import WindowLayout from '../layouts/WindowLayout.astro';
import WebcamDither from '../components/WebcamDither.astro';
import Window from '../components/Window.astro';
import DesktopIcon from '../components/DesktopIcon.astro';
import Toolchest from '../components/Toolchest.astro';
import XClock from '../components/XClock.astro';
import { Image } from "astro:assets";
import sgi_logo from "../assets/sgi.svg"
import horizon from "../assets/horizon.png"
import sgi_obituary from "../assets/sgi-obituary.png"
// Desktop icons: real windows use group icon, fictional apps use the rest
import Misc_Deskbar_Group from "../assets/Misc_Deskbar_Group.png"
import Action_GoHome_2 from "../assets/Action_GoHome_2.png"
import App_CDPlayer from "../assets/App_CDPlayer.png"
import App_TV_2 from "../assets/App_TV_2.png"
import File_Audio_2 from "../assets/File_Audio_2.png"
import Alert_Info from "../assets/Alert_Info.png"
import App_Chat from "../assets/App_Chat.png"
import App_BeHappy from "../assets/App_BeHappy.png"
import App_Poorman from "../assets/App_Poorman.png"
import File_Person from "../assets/File_Person.png"
---

<FullViewportLayout>
	<div class="hero">
		<div class="hero-logo-wrap">
			<Image class="sgi_logo" src={sgi_logo} alt="SGI logo"/>
		</div>

		<div class="bar">
			<h2>
				How Silicon Graphics changed computing forever
			</h2>
			<p>An interactive retrospective by Marcelo Mendez</p>
			<div class="scroll-indicator">
				<span class="scroll-arrow">â†“</span>
				<span class="scroll-text">Scroll down</span>
			</div>
		</div>
	</div>
</FullViewportLayout>

<WindowLayout>
	<Toolchest slot="toolchest" />
	<!-- Real windows: group icon -->
	<DesktopIcon slot="taskbar" windowId="window-origins" title="Origins" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="window-demo" title="Demo Reel" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="window-irix" title="IRIX" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="window-xclock" title="Clock" iconSrc={Misc_Deskbar_Group.src} />
	<!-- Fictional apps (no window) -->
	<DesktopIcon slot="taskbar" windowId="noop" title="Home Base" iconSrc={Action_GoHome_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Disc Jockey" iconSrc={App_CDPlayer.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Tube Viewer" iconSrc={App_TV_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Waveform Lab" iconSrc={File_Audio_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Read Me" iconSrc={Alert_Info.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Neighborhood Chat" iconSrc={App_Chat.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Smile Box" iconSrc={App_BeHappy.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Pocket Change" iconSrc={App_Poorman.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Rolodex" iconSrc={File_Person.src} />

	<Window id="window-xclock" title="xclock" left={780} top={480} width={200} height={240}>
		<XClock />
	</Window>

	<Window id="window-origins" title="Silicon Graphics origins" left={50} top={50} width={400} height={300}>
		<iframe width="560" height="315" src="https://www.youtube.com/embed/dFUlAQZB9Ng?si=5bTTay12BT6fZpia&amp;start=3" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
	</Window>

	<Window id="window-demo" title="SGI demo reel" left={150} top={120} width={400} height={300}>
		<!-- <WebcamDither /> -->
		<iframe width="560" height="315" src="https://www.youtube.com/embed/5TqPl3MSSow?si=IiMTnl9jTkohV4Ns&amp;start=32" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
	</Window>

	<Window id="window-irix" title="Welcome to IRIX!" left={300} top={100} width={400} height={300}>
		<p>
			IRIX is the desktop experience of Silicon Graphics Computers, the ultra powerful supercomputer product line that was behind many of the technical achievements in Hollywood throughout the 90's.

			CGI Segments in movies such as Jurassic Park, Terminator 2, and the entirety of Toy Story were created, edited, and rendered entirely on SGI systems!

			You could expect to pay upwards of $200,000 for just ONE (1) of these workstations. If you had a team of artists that needed computers, that would be a lot of money spent on just hardware!
		</p>
	</Window>
</WindowLayout>

<FullViewportLayout>
	<div class="hero-2">

		<div class="banner-text">
			<h2>
				silicon graphics
			</h2>

			<h2 class="not-for">
				not just for hollywood
			</h2>
		</div>
		<Image class="horizon-image" src={horizon} alt="gradient"/>

		<div class="banner-text2">
			<h3 class="hiii">
				silicon graphics workstations were marketed mostly towards the visual graphics audience, but their powerful hardware was attractive to big-data use cases and for recreational use as well.

			</h3>
		</div>
	</div>
</FullViewportLayout>

<WindowLayout>
	<DesktopIcon slot="taskbar" windowId="window-about" title="About" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="window-webcam" title="Webcam" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="window-weather" title="Webcam" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Home Base" iconSrc={Action_GoHome_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Disc Jockey" iconSrc={App_CDPlayer.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Tube Viewer" iconSrc={App_TV_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Waveform Lab" iconSrc={File_Audio_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Read Me" iconSrc={Alert_Info.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Neighborhood Chat" iconSrc={App_Chat.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Smile Box" iconSrc={App_BeHappy.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Pocket Change" iconSrc={App_Poorman.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Rolodex" iconSrc={File_Person.src} />

	<Window id="window-about" title="Games on SGI hardware" left={80} top={60} width={420} height={260}>

		<h3>Playing three games at once would've been unprecedented at the time that SGI computers launched</h3>

		<iframe width="560" height="315" src="https://www.youtube.com/embed/JvXt-mZYQZc?si=NHMb8Tr4ESEAV27T&amp;start=34&mute=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
	</Window>

	<Window id="window-webcam" title="Webcam Viewer" left={200} top={140} width={420} height={320}>
		<WebcamDither />
	</Window>

	<Window id="window-weather" title="WeatherProducer 3.0" left={650} top={340} width={320} height={220}>

		<h3>WeatherProducer 3.0 was the premier television graphics software used for weather stations. It could render real time weather maps radar images that would then get broadcast live on air. </h3>

		<br> <br>
			<details>
				<summary>Show Example Image...</summary>
				<img src="https://forums.sgi.sh/index.php?attachments/o2-plus2-screenshot2-png.2028/">

			</details>
	</Window>
</WindowLayout>

<FullViewportLayout>
	<div class="hero-3">

		<h2>
			Silicon Graphics is dead
		</h2>

		<Image class="sgi-obituary" src={sgi_obituary} alt="gradient"/>

		<h2>
			Long live Silicon Graphics
		</h2>

	</div>
</FullViewportLayout>

<WindowLayout>
	<DesktopIcon slot="taskbar" windowId="window-about" title="About" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="window-webcam" title="Webcam" iconSrc={Misc_Deskbar_Group.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Home Base" iconSrc={Action_GoHome_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Disc Jockey" iconSrc={App_CDPlayer.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Tube Viewer" iconSrc={App_TV_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Waveform Lab" iconSrc={File_Audio_2.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Read Me" iconSrc={Alert_Info.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Neighborhood Chat" iconSrc={App_Chat.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Smile Box" iconSrc={App_BeHappy.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Pocket Change" iconSrc={App_Poorman.src} />
	<DesktopIcon slot="taskbar" windowId="noop" title="Rolodex" iconSrc={File_Person.src} />

	<Window id="window-about" title="The Party's Over" left={480} top={370} width={500} height={300}>
		<div class="news-article">
			<h1 class="article-headline">SGI Files For Chapter 11 Bankruptcy Protection</h1>
			<div class="article-meta">
				<span class="article-author">By Kristen Kenedy</span>
				<span class="article-date">May 08, 2006, 01:55 PM EDT</span>
			</div>
			<hr class="article-divider" />
			<div class="article-body">
				<p>Mountain View, Calif.-based SGI said it reached an agreement with all of its major debt holders that would reduce its debt by $250 million as part of the move.</p>
				<p>Once a high-flying maker of servers, workstations and visualization systems, SGI has seen its business wane for several years. Most recently, the company was delisted from the New York Stock Exchange for trading below the minimum $1 per share. It now trades on the small-cap OTC Bulletin Board.</p>
				<p>SGI said it expects to file its reorganization plan shortly and to emerge from Chapter 11 within six months.</p>
				<p>"We want to assure our customers, our employees and our communities that SGI is operating business as usual," recently appointed SGI Chairman and CEO Dennis McKenna said in a statement.</p>
				<p>He added: "This is a necessary and responsible step that will strengthen the company and foster a sustained turnaround at SGI. This milestone marks a fundamental and comprehensive change."</p>
			</div>
		</div>
	</Window>

	<Window id="window-dead" title="What happens next?" left={280} top={60} width={300} height={400}>
		<p>Silicon Graphics would get bought out by Hewlett Packard Enterprise (HPE) in 2016 for around $275 million.

			<br> <br>

			While HPE did get a boost in their position regarding high computing, the SGI brand would never go through a "rebrand", and all intellectual property would remain that of Hewlett Packard
		</p>
</WindowLayout>


<style>

 body {
	 background-color: black;
 }

 h1 {
	 /* font-size: 20rem; */
	 margin: 0;
 }

 h1, p, h2 {
	 color: white;
 }

 h2,h3 {
	 font-family: 'SGI', sans-serif;

 }

 h3 {
	 margin: 0;
 }

 .hero {
	 display: flex;
	 position: relative;
	 min-height: 100dvh;
	 min-height: 100vh;
	 width: 100%;
	 overflow: hidden;
	 align-items: stretch;
	 justify-content: flex-end;
 }

 .hero h1 {
	 color: #472b91 !important;
 }

 /* Viewport-sized wrapper so logo scale and offset react to window size */
 .hero .hero-logo-wrap {
	 position: absolute;
	 left: -8%;
	 top: -7%;
	 width: 120vw;
	 height: 114vh;
	 z-index: 0;
	 pointer-events: none;
 }

 .hero .hero-logo-wrap .sgi_logo {
	 width: 100%;
	 height: 100%;
	 object-fit: contain;
	 object-position: left center;
 }

 .bar {
	 position: relative;
	 z-index: 1;
	 background-color: #571e52;
	 width: min(400px, 38vw);
	 max-width: 100%;
	 flex-shrink: 0;
	 display: flex;
	 flex-direction: column;
	 justify-content: center;
	 padding: clamp(1.5rem, 4vw, 3rem);
 }

 .scroll-indicator {
	 display: flex;
	 align-items: center;
	 gap: 0.5rem;
	 margin-top: 1.5rem;
	 opacity: 0;
	 transition: opacity 0.8s ease-in-out;
	 font-family: 'SGI', sans-serif;
	 color: #CACEC7;
 }

 .scroll-indicator.visible {
	 opacity: 1;
 }

 .scroll-arrow {
	 font-size: 1.5rem;
	 animation: bounce 1.5s ease-in-out infinite;
	 display: inline-block;
 }

 .scroll-text {
	 font-size: 0.9rem;
 }

 @keyframes bounce {
	 0%, 100% {
		 transform: translateY(0);
	 }
	 50% {
		 transform: translateY(8px);
	 }
 }

 .hero p, .hero h2 {
	 color: #CACEC7;
	 font-family: 'SGI', sans-serif;

 }

 .hero-2 {
	 background-color: #005642;
	 min-height: 100dvh;
	 min-height: 100vh;
	 width: 100%;
	 display: flex;
	 flex-flow: column;
	 align-items: center;
	 justify-content: center;
 }

 .banner-text {
	 display: flex;
	 min-width: 600px;
	 justify-content: space-between;
 }

 .banner-text h2 {
	 color: white;
	 font-size: 2rem;
 }

 .hiii {
	 color: white !important;
	 margin-top: 50px;
	 max-width: 300px;
	 font-size: 0.9rem;
	 text-align: center;
	 text-justify: inter-word;
 }

 .not-for {

	 color: #ff5f00 !important;
 }

 .hero-3 {
	 min-height: 100dvh;
	 min-height: 100vh;
	 width: 100%;
	 display: flex;
	 flex-flow: column;
	 align-items: center;
	 justify-content: center;
	 background: radial-gradient(ellipse 80% 100% at 50% 60%, #a0b1ff , #8b9cfb,  #6574c4, #48529a, #1b255d, #020d39, #00001a, #00010f 65%);

	 h2 {
		 font-size: 200%;
	 }
 }

 .sgi-obituary {
	 width: 55%;
	 height: auto;
	 max-width: 100%;
 }

 .horizon-image {
	 width: 100%;
	 height: auto;
	 max-width: 100%;
	 object-fit: contain;
 }

 /* 90s News Article Styles */
 .window-content :global(.news-article) {
	 font-family: "Times New Roman", Times, serif;
	 background: #ffffff;
	 color: #000000;
	 padding: 12px 16px;
	 margin: -12px;
	 min-height: calc(100% + 24px);
	 line-height: 1.6;
	 box-sizing: border-box;
 }

 .window-content :global(.article-headline) {
	 font-size: 16px;
	 font-weight: bold;
	 color: #000000;
	 margin: 0 0 8px 0;
	 line-height: 1.3;
	 font-family: "Times New Roman", Times, serif;
 }

 .window-content :global(.article-meta) {
	 font-size: 11px;
	 color: #666666;
	 margin-bottom: 12px;
	 display: flex;
	 flex-direction: column;
	 gap: 2px;
 }

 .window-content :global(.article-author) {
	 font-weight: bold;
	 color: #000000;
 }

 .window-content :global(.article-date) {
	 color: #666666;
 }

 .window-content :global(.article-divider) {
	 border: none;
	 border-top: 2px solid #000000;
	 margin: 12px 0;
	 height: 0;
 }

 .window-content :global(.article-body) {
	 font-size: 13px;
	 color: #000000;
	 line-height: 1.6;
 }

 .window-content :global(.article-body p) {
	 margin: 0 0 12px 0;
	 text-align: justify;
	 color: #000000;
 }

 .window-content :global(.article-body p:last-child) {
	 margin-bottom: 0;
 }

</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const scrollIndicator = document.querySelector('.scroll-indicator');
		if (scrollIndicator) {
			setTimeout(() => {
				scrollIndicator.classList.add('visible');
			}, 2000);
		}
	});
</script>
