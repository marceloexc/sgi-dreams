---
import Layout from './Layout.astro';
import sgiTextFont from '../assets/SGI-Text.ttf';
---

<Layout>
	<div class="viewport-container">
		<slot />
	</div>
</Layout>

<style define:vars={{ fontUrl: sgiTextFont }}>
 @font-face {
	 font-family: 'SGI';
	 src: url(var(--fontUrl)) format('truetype');
	 font-weight: normal;
	 font-style: normal;
	 font-display: swap;
 }

 :global(html) {
	 overflow-y: auto;
	 scroll-behavior: smooth;
 }

 :global(body) {
	 margin: 0;
	 min-height: 100%;
 }

 .viewport-container {
	 box-sizing: border-box;
	 min-height: 100dvh;
	 min-height: 100vh;
	 width: 100%;
	 max-width: 100vw;
	 margin-top: 4rem;
	 margin-bottom: 4rem;
 }

 .viewport-container :global(h1),
 .viewport-container :global(h2),
 .viewport-container :global(h3),
 .viewport-container :global(h4),
 .viewport-container :global(h5),
 .viewport-container :global(h6) {
	 font-family: 'SGI', sans-serif;
 }
</style>
