---
interface Props {
	id: string;
	title: string;
	left?: number;
	top?: number;
	width?: number;
	height?: number;
}

const {
	id,
	title,
	left = 50,
	top = 50,
	width = 400,
	height = 300,
} = Astro.props;
---

<div
	class="window"
	id={id}
	style={`left: ${left}px; top: ${top}px; width: ${width}px; height: ${height}px;`}
>
	<div class="titlebar">
		<div class="titlebar-buttons" aria-label="Window controls">
			<button class="titlebar-btn shade-btn" type="button" aria-label="Shade window" title="Shade"></button>
		</div>
		<span class="title">
			<slot name="title">{title}</slot>
		</span>
		<div class="titlebar-buttons" aria-label="Window controls">
			<button class="titlebar-btn close-btn" type="button" aria-label="Close window" title="Close"></button>
			<button class="titlebar-btn maximize-btn" type="button" aria-label="Maximize window" title="Maximize"></button>
		</div>
	</div>
	<div class="window-content">
		<slot />
	</div>
	<div class="resize-handle"></div>
</div>

